@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="p-3 text-center justify-content-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    
    <div class="container">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p class="fs-5">Create a new account.</p>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating p-1">
                <input asp-for="Input.Email" class="form-control m-1" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="m-1"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Input.Password" class="form-control m-1" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="m-1"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Input.ConfirmPassword" class="form-control m-1" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="m-1"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-lg rounded-pill btn-outline-primary m-2">Register</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
