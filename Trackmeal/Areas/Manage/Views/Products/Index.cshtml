@model IEnumerable<Trackmeal.Areas.Manage.Models.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Manage products";
}

<h2>@ViewData["Title"]</h2>
@Html.ActionLink("New product", "New", "Products", new { }, new { @class = "btn btn-primary" })

@if (Model.Any())
{
    <table class="table table-hover table-bordered">
        <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@Html.ActionLink(product.Name, "Edit", "Products", new { id = product.Id })</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no products in the database.</p>
}
