<section id="summary-header" class="py-4 bg-light text-center">
    <h2>Thank you!</h2>
    <p>Here's the summary of your order</p>
</section>

@await Html.PartialAsync("Order/_OrderDetails", Model.Order)

<section id="summary-tracker" class="p-4">
    <div class="hstack justify-content-center px-3">
        <div class="text-center">
            <p>Scan this QR code to move to the order tracking page</p>
            <img src="@Model.QrCodeImageSource" class="border border-2 rounded-3" alt="QR code" style="width: 200px; height: 200px"/>
        </div>
        <div class="vr mx-5" style="margin-top: 75px; margin-bottom: 75px"></div>
        @Html.ActionLink("Track the status of your order here", "Status", new { token = Model.Order.Token }, new { @class = "btn btn-outline-primary rounded-pill" })
    </div>
</section>