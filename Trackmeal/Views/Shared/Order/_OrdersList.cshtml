@model IEnumerable<Order>

<section id="orders-list" class="text-center py-4">
    @if (Model.Any())
    {
        <div class="container-sm">
            <table class="table table-borderless table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Date ordered</th>
                    <th>Status</th>
                    <th>Total price</th>
                    <th>Details</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.DateOrdered</td>
                        <td>@order.OrderStatus.Name</td>
                        <td>$@order.TotalPrice</td>
                        <td>
                            @Html.ActionLink("View details...", "Details", "Orders", new { orderId = order.Id}, new { @class = "btn btn-outline-secondary rounded-pill" })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="h4 text-muted">There aren't any orders yet.</p>
    }
</section>
